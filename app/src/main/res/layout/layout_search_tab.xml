<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/common_searchbox_home_bg"
                android:gravity="center">

    <ImageView
        android:id="@+id/layout_search_tab_search_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitStart"
        android:padding="5dp"
        android:src="@drawable/common_icon_searchbox_magnifier"/>

    <TextView
        android:id="@+id/layout_search_tab_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:layout_toEndOf="@+id/layout_search_tab_search_view"
        android:layout_toLeftOf="@+id/layout_search_tab_line"
        android:layout_toRightOf="@+id/layout_search_tab_search_view"
        android:layout_toStartOf="@+id/layout_search_tab_line"
        android:singleLine="true"
        android:text="@string/search_tab"
        android:textColor="@color/general_dark_gray"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/layout_search_tab_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/layout_search_tab_voice"
        android:layout_toStartOf="@+id/layout_search_tab_voice"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <include layout="@layout/include_vertical_seperator_line"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/layout_search_tab_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:scaleType="fitEnd"
        android:src="@drawable/press_bg_search_tab_voice"/>

</RelativeLayout>
